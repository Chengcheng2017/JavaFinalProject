<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommendation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chengcheng.leaguage.Recommendation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@drawable/b1">

        <TextView
            android:id="@+id/course_recommended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:gravity="center"
            android:fontFamily="serif"
            android:text=" Courses Recommended"
            android:textColor="@color/white"
            android:textSize="20dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/course_pic1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                tools:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle"
                    tools:text="Course" />

                <TextView
                    android:id="@+id/course_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textColor="@color/lightDark"
                    android:textSize="@dimen/text_small"
                    tools:text="200" />
            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:id="@+id/check1"/>
        </LinearLayout>

        <View style="@style/Divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/course_pic2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                tools:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle"
                    tools:text="Course" />

                <TextView
                    android:id="@+id/course_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textColor="@color/lightDark"
                    android:textSize="@dimen/text_small"
                    tools:text="200" />
            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:id="@+id/check2"/>
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/course_pic3"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                tools:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle"
                    tools:text="Course" />

                <TextView
                    android:id="@+id/course_info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textColor="@color/lightDark"
                    android:textSize="@dimen/text_small"
                    tools:text="200" />
            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:id="@+id/check3"/>
        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/course_pic4"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="70dp"
                android:layout_marginRight="16dp"
                tools:src="@drawable/ic_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle"
                    tools:text="Course" />

                <TextView
                    android:id="@+id/course_info4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:textColor="@color/lightDark"
                    android:textSize="@dimen/text_small"
                    tools:text="200" />
            </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:id="@+id/check4"/>
        </LinearLayout>

        <View style="@style/Divider"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

    <Button
        android:id="@+id/skip_button"
        style="@style/ButtonAppTheme"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="skip"
        android:text="Skip" />
    </LinearLayout>

</LinearLayout>
